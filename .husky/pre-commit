#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run lint-staged for nextjs-agent
if [ -d "nextjs-agent" ]; then
  echo "Running pre-commit hooks for nextjs-agent..."
  cd nextjs-agent
  npx lint-staged
  cd ..
fi

# Run lint-staged for svelte-wrapper (if exists)
if [ -d "svelte-wrapper" ]; then
  echo "Running pre-commit hooks for svelte-wrapper..."
  cd svelte-wrapper
  npx lint-staged || true
  cd ..
fi
